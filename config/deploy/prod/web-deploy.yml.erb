---
apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: web
  namespace: ccs-prod
  annotations:
    shipit.shopify.io/restart: "true"
spec:
  replicas: 1
  template:
    metadata:
      labels:
        app: web
    spec:
      containers:
        - name: web
          image: us.gcr.io/bloom-general/crypto-cold-store:<%= current_sha %>
          command: ["bundle", "exec", "rails", "s", "-p", "3000", "-b", "0.0.0.0"]
          ports:
            - name: http-port
              containerPort: 3000
          env: <%= partial "env" %>
          readinessProbe:
            tcpSocket:
              port: http-port
            initialDelaySeconds: 60
            timeoutSeconds: 60
          livenessProbe:
            tcpSocket:
              port: http-port
            initialDelaySeconds: 60
            timeoutSeconds: 60
